@using Student_Hostel.Models
@model List<Dormitory>
<div class="container">
    <h2>卫生情况登记</h2>
    <form enctype="multipart/form-data" action="AddHygiene" method="post">
        <div>
            <label for="time">员工号:@ViewData["UserCode"]</label>
            <input type="hidden" name="code" value="@ViewData["UserCode"]" />
        </div>
        <div class="form-group">
            <label for="time">检查时间:</label>
            <input type="text" class="form-control" name="time" value="" />
        </div>
        <div class="form-group">
            <label for="departmentId">楼号-宿舍号:</label>
            <select class="select" name="DormitoryId">
                @foreach (var item in Model)
                {
                    <option value="@item.Id">@item.DorName</option>
                }
            </select>

        </div>
        <div class="form-group">
            <label for="Remark">评级：</label>
            <select class="select" name="remark">
                @foreach (var item in Enum.GetNames(typeof(RatingName)))
                {
                    <option value="@item">@item</option>

                }
            </select>
        </div>
        <button type="submit" class="btn btn-primary">添加</button>
        <label class="col-form-label">@ViewBag.Msg</label>

    </form>
</div>
