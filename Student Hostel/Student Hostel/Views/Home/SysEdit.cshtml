@model SysUser
<div class="container">
    <form enctype="multipart/form-data" action="SysEdit" method="post">
        <div>
            <input type="hidden" name="id" value="@Model.Id" />
        </div>
        <div>
            <input type="hidden" name="Code" value="@Model.Code" />
        </div>
        <div class="form-group">
            <label asp-for="Name" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="name" value="@Model.Name"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label for="sex">性别:</label>
            @if (Model.Sex)
            {
                <input type="radio" name="sex" value="true" checked />@:男
                <input type="radio" name="sex" value="false" />@:女

            }
            else
            {
                <input type="radio" name="sex" value="true" />@:男
                <input type="radio" name="sex" value="false" checked />@:女
            }
        </div>
        <div class="form-group">
            <label asp-for="Phone" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="phone" value="@Model.Phone" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
        </div>
        @*<div class="form-group">
            <label for="phone">电话:</label>
            <input type="text" class="form-control" name="Phone" value="@Model.Phone">
        </div>*@

        @*<div class="form-group">
            <label for="Pwd">密码：</label>
            <input type="password" class="form-control" name="pwd" value="@Model.Pwd">
        </div>*@
        <div class="form-group">
            <label asp-for="Pwd" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input type="password" name="pwd" class="form-control" value="@Model.Pwd" placeholder="请输入密码" />
                <span asp-validation-for="Pwd" class="text-danger"></span>
                @*<label for="Pwd">密码：</label>
                <input type="password" class="form-control" name="pwd">*@
            </div>
        </div>
        <div class="form-group">
            <label asp-for="PasswordConfirm" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input type="password" name="PasswordConfirm" class="form-control" placeholder="请确认密码" />
                <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
            </div>
        </div>

        <button type="submit" class="btn btn-primary">修改</button>
        <a href="/Home/SysDetails">返回</a>
        <label class="col-form-label">@ViewBag.Msg</label>

    </form>
</div>
