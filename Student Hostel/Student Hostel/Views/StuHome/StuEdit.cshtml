<div class="container">
    <form action="StuEdit" method="post">
        <div>
            <input type="hidden" name="id" value="@Model.Id" />
        </div>
        <div>
            <input type="hidden" name="Code" value="@Model.Code" />
        </div>
        @*<div class="form-group">
            <label for="name">姓名（昵称）:</label>
