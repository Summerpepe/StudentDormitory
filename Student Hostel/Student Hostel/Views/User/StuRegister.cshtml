@{
    Layout = null;
}
@model StuUser
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdn.staticfile.org/twitter-bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="https://cdn.staticfile.org/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://cdn.staticfile.org/popper.js/1.15.0/umd/popper.min.js"></script>
    <script src="https://cdn.staticfile.org/twitter-bootstrap/4.3.1/js/bootstrap.min.js"></script>
</head>
<body>
    <div class="container">
        <h2>学生注册信息</h2>
        <div class="container">
            <form enctype="multipart/form-data" action="StuRegister" method="post">
                @*<div class="form-group">*@
                @*<label for="code">学号:</label>
            <input type="text" class="form-control" placeholder="Enter Code" name="Code">
        </div>*@
                <div class="form-group">
                    <label asp-for="Code" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input type="text" id=Code class="form-control" name="code" placeholder="请输入学号" />
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    @*<label for="name">姓名:</label>
            <input type="text" class="form-control" placeholder="Enter Name" name="Name">*@
                    <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="name" placeholder="请输入名字" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    @*<label for="Pwd">密码：</label>
            <input type="password" class="form-control" name="pwd">*@
                    <label asp-for="Pwd" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input type="password" name="pwd" class="form-control" placeholder="请输入密码" />
                        <span asp-validation-for="Pwd" class="text-danger"></span>
                        @*<label for="Pwd">密码：</label>
                <input type="password" class="form-control" name="pwd">*@
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="PasswordConfirm" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input type="password" name="PasswordConfirm" class="form-control" placeholder="请输入密码" />
                        <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary">注册</button>
                <a href="/user/StuLogin">返回</a>
                <span class="text-danger">@ViewBag.Msg</span>

            </form>
        </div>
    </div>
</body>
</html>

